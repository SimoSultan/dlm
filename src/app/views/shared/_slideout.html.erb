

<!-- Modal -->
<div class="modal right fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel2">Right Sidebar</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>

      <div class="modal-body">

        <p>
          <strong>Instructor:</strong>
          <%= "#{lesson&.instructor&.first_name&.capitalize} #{lesson&.instructor&.last_name&.capitalize}" %>
        </p>

        <p>
          <strong>Date:</strong>
          <%= lesson&.date %>
        </p>

        <p>
          <strong>Time:</strong>
          <%= lesson&.time.strftime('%H:%M') if lesson&.time %>
        </p>

        <p>
          <strong>Duration:</strong>
          <%= "#{lesson&.duration} mins" if lesson&.duration %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= current_user.student.address.capitalize %>
        </p>

        <p>
          <strong>Transmission:</strong>
          <%= current_user.student.transmission.capitalize %>
        </p>

        <p>
          <strong>Cancelled:</strong>
          <%= lesson&.cancelled ? "Yes" : "No" %>
        </p>


        <p>
          <strong>Payment:</strong>
          to-do
          <%#= @lesson.payment if @lesson.payment %>
        </p>

      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- modal-content -->
  </div><!-- modal-dialog -->
</div><!-- modal -->



