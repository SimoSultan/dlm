<div class="container mt-5">

  <%= form_with(model: admin, local: true) do |form| %>
    <% if admin.errors.any? %>
      <div id="error_explanation">
        <!--<h2><%#= pluralize(admin.errors.count, "error") %> prohibited this student from being saved:</h2>-->

        <ul class="alert alert-warning list-style-none">
          <% admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container text-center">
      <%= image_tag user_avatar(@admin.user, 100), class: 'profile-avatar'%>
      <br>
      <%= form.file_field :avatar, accept: 'image/png,image/gif,image/jpeg', class: 'ml-5 mt-4' %>
    </div>


    <div class="row mt-4">
      <div class="form-group col">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group col">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
    </div>
    </div>


    <div class="actions">
      <%= form.submit 'Update', class: 'btn btn-primary' %>
    </div>
  <% end %>

</div>

