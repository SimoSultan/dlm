<%= form_with(model: instructor, local: true) do |form| %>
  <% if instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
        <% instructor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= image_tag user_avatar(current_user, 100), class: 'profile-avatar'%>


  <%= form.file_field :avatar, accept: 'image/png,image/gif,image/jpeg' %>  

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dob %>
    <%= form.text_field :dob, class: "form-control" %>
  </div>

  <div class="form-group form-check">
    <%= form.radio_button :transmission, :manual, class: "form-check-input" %>
    <%= form.label :transmission, "Manual", class: "form-check-label", value: :manual %><br />
    <%= form.radio_button :transmission, :automatic, class: "form-check-input" %>
    <%= form.label :transmission, "Automatic", class: "form-check-label", value: :automatic %>
  </div>

  <div class="form-group form-check">
    <%= form.radio_button :gender, :male, class: "form-check-input" %>
    <%= form.label :gender, "Male", class: "form-check-label", value: :male %><br />
    <%= form.radio_button :gender, :female, class: "form-check-input" %>
    <%= form.label :gender, "Female", class: "form-check-label", value: :female %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
