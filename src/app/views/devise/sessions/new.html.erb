
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-7 form-signin text-center"} ) do |f| %>
  
    <%= image_tag 'dlm-logo.png', class: 'mb-4, logo-login' %>
    <%#= inline_svg_tag 'capicon/049.svg', class: 'login-icon mb-4' %>
    <%# <img class="mb-4" src="/docs/4.5/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <%= f.label :email, class: "sr-only", placeholder: "Email address" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address"  %>

    <%= f.label :password, placeholder: "Password", class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password"  %>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3 mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
    </div>

    <br>
    <%= render "devise/shared/links" %>

    <p class="mt-4 mb-3 text-muted">Â© 2020</p>

  <% end %>




