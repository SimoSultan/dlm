
<h1 class="display-4">New Lesson</h1>

<% if @lesson.errors.any? %>
  <div id="error_explanation">
    <ul class="alert alert-warning list-style-none">
      <% @lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'shared/new_lesson', locals: {lesson: @lesson, instructors: @instructors, students: @students} %>


