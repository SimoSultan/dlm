<%= link_to 'Edit My Account', edit_student_path(@student) %>

<br>

<p>
  <strong>Name:</strong>
  <%= @student.first_name.capitalize + ' ' + @student.last_name.capitalize if @student.first_name && @student.last_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @student.address if @student.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @student.phone if @student.phone %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @student.dob if @student.dob %>
</p>

<p>
  <strong>Transmission:</strong>
  <%= @student.transmission.capitalize if @student.transmission %>
</p>

<div class="card text-center">
  <h5 class="card-header">Book a Driving Lesson</h5>
  <div class="card-body">
    <%#= form_with(model: request_lesson, local: true) do |form| %>
    <%= form_with do |form| %>

      <div class="form-group row">
        <%= form.label :date, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6"><%= form.text_field :date, class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <%= form.label :time, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6"><%= form.text_field :time, class: "form-control" %></div>
        
      </div>

      <div class="form-group row">
        <%= form.label :instructor, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= form.radio_button :instructor, :any, class: "form-check-input" %>
          <%= form.label :instructor, "Any Instructor", class: "form-check-label", value: :any %><br />
          <%= form.radio_button :instructor, :male, class: "form-check-input" %>
          <%= form.label :instructor, "Male", class: "form-check-label", value: :male %><br />
          <%= form.radio_button :instructor, :female, class: "form-check-input" %>
          <%= form.label :instructor, "Female", class: "form-check-label", value: :female %>
        </div>

      </div>

      <div class="form-group row">
        <%= form.label :duration, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6"><%= form.text_field :duration, class: "form-control" %></div>
        
      </div>

      <div class="form-group row">
        <%= form.label :address, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6"><%= form.text_field :address, class: "form-control" %></div>
        
      </div>

      <div class="actions">
        <%= form.submit "BOOK", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'Back', students_path, class: "btn btn-secondary"%>
