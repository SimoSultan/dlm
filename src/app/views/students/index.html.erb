
<h1>Students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Dob</th>
      <th scope="col">Transmission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name.capitalize + ' ' + student.last_name.capitalize if student.first_name && student.last_name %></td>
        <td><%= student.address if student.address %></td>
        <td><%= student.phone if student.phone %></td>
        <td><%= student.dob if student.dob %></td>
        <td><%= student.transmission.capitalize if student.transmission %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

